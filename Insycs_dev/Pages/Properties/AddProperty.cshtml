@page
@model AddPropertyModel

<h2>Add Property</h2>

<form method="post">

    <div class="form-group">
        <label asp-for="Property.PropertyType">Property Type</label>
        <select asp-for="Property.PropertyType" class="form-control">
            <option value="">-- Select Property Type --</option>
            <option value="Land">Land</option>
            <option value="Commercial">Commercial</option>
            <option value="House">House</option>
            <option value="Apartment">Apartment</option>
            <option value="Condo">Condo</option>
        </select>
        <span asp-validation-for="Property.PropertyType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.PropertyValue">Property Value</label>
        <input asp-for="Property.PropertyValue" class="form-control" />
        <span asp-validation-for="Property.PropertyValue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.Location">Location</label>
        <input asp-for="Property.Location" class="form-control" />
        <span asp-validation-for="Property.Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.PurchaseDate">Purchase Date</label>
        <input asp-for="Property.PurchaseDate" class="form-control" type="date" />
        <span asp-validation-for="Property.PurchaseDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Property</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

